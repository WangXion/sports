/* pages/scientificFitness/scientificFitness.wxss */
.keep {
  margin-top: 15rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
}
.keep .tab {
  font-weight: 400;
  color:rgba(102,102,102,1);
}
.keep .tabs{
  height: 70rpx;
  white-space: nowrap;
  overflow: hidden;
}
.keep .tab .item{
  /* margin-right: 38rpx; */
  /* min-width: 99rpx; */
  font-size: 30rpx;
  color: #666;
  padding: 0 10rpx;
}
.keep .tab .active {
  font-size: 36rpx;
  color: #FF791F;
  position: relative;
}
.keep .tab .active::before {
  content: '';
  width: 70rpx;
  /* width: 85%; */
  height: 8rpx;
  background: #FF791F;
  position: absolute;
  border-radius: 6rpx;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
}
.keep .search {
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  background: rgba(237,237,237,1);
  font-size: 24rpx;
  font-weight: 400;
  color:rgba(102,102,102,1);
  border-radius: 40rpx;
  padding: 0 10rpx;
  margin-bottom: 35rpx;
  box-sizing: border-box;
}
.keep .search .icon {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
/* banner */
.keep .banner {
  width: 720rpx;
  height: 279rpx;
  margin: 20rpx 0 7rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
}
/* 列表 */
.keep .list {
  display: flex;
  justify-content: space-between;
  padding:  38rpx 0 25rpx 0;
  border-bottom: 2rpx solid #e5e5e5;
  padding-top: 35rpx;
}
.keep .list .left {
  font-size: 32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.keep .list .left .bottom{
  margin-top: 30rpx;
  color: #FF791F;
  font-size: 28rpx;
}
.keep .list .left  .time {
  color: rgba(153,153,153,1)
}
.keep .list .left .newsTag{
  color: #226fe3;
  background: #e8f3ff;
  padding: 4rpx 8rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.keep .list .right {
  min-width: 240rpx;
  height: 142rpx;
  margin-left: 10rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.pd50{
  padding-top: 50rpx;
}