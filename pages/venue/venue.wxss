/* pages/venue/venue.wxss */
.venue {
  background:rgba(245,245,245,1);
  height: 100%;
}
.venue .venue-search {
  font-size: 24rpx;
  font-weight: 400;
  color:rgba(102,102,102,1);
  position: relative;
  background: #fff;
  padding: 0 15rpx;
}
.venue .venue-search .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  position: absolute;
  top: 20rpx;
  left: 40rpx;
}
.venue .venue-search .input {
  width: 646rpx;
  height: 66rpx;
  line-height: 66rpx;
  background:rgba(245,245,245,1);
  border-radius: 100rpx;
  padding-left: 75rpx;
}
/* 场馆信息 */
.venue .item {
  display: flex;
  font-size: 20rpx;
  font-weight: 400;
  color:rgba(27,27,27,1);
  margin-top: 11rpx;
  padding: 21rpx 15rpx;
  background: #fff;
}
.venue .item .img {
  width: 208rpx;
  height: 176rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
  box-shadow:0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.21);
  border-radius: 10rpx;
}
.venue .item .right {
  min-width: 490rpx;
}
.venue .item .name {
  font-size: 28rpx;
  font-weight: bold;
  color:rgba(27,27,27,1);
  display: flex;
  margin-bottom: 10rpx;
}
.venue .item .name .icon {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background:rgba(255,177,53,1);
  border-radius: 5rpx;
  margin: 0 10rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
}
.venue .item .name .hot {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background:rgba(255,64,82,1);
  border-radius: 5rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
}
.venue .item .address {
  margin: 10rpx 0;
}
.venue .item .select {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.venue .item .select .cont {
  display: flex;
  align-items: center;
}
.venue .item .select .cont .tag {
  line-height: 32rpx;
  margin-right: 10rpx;
  padding: 6rpx 11rpx;
  background:rgba(235,235,235,1);
  border-radius: 3rpx;
  color:rgba(102,102,102,1);
  font-size: 20rpx;
}
.color {
  color:rgba(255,64,82,1);
}
.color1 {
  color: #666;
}