/* pages/publicLectureDetail/publicLectureDetail.wxss */
.publicLectureDetail {
  /* background: #F7F4F8; */
}
.publicLectureDetail .banner{
  width: 100%;
  background: #fff;
  height: 430rpx;
}
.publicLectureDetail .title {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(51,51,51,1);
  background: #fff;
  padding: 0 16rpx;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
.publicLectureDetail .detail {
  font-size: 28rpx;
  color:rgba(153,153,153,1);
  box-sizing: border-box;
  padding: 0 16rpx;
  padding-bottom: 36rpx;
  background: #fff;
}
.publicLectureDetail .detail .desc {
  line-height: 45rpx;
}
/* 分割线 */
.publicLectureDetail .border {
  width:750rpx;
  height:11rpx;
  background:rgba(233,233,233,1);
}
/* 培训介绍 */
.publicLectureDetail .cont {
  padding: 30rpx 16rpx 0 16rpx;
}
.publicLectureDetail .cont .title {
  font-size: 30rpx;
  font-weight: 400;
  color:#F98B1C;
  display: flex;
  align-items: center;
  margin-bottom: 34rpx;
  position: relative;
}
.publicLectureDetail .cont .title:after{
  content: '';
  width: 120rpx;
  height: 10rpx;
  background: #F98B1C;
  border-radius: 6rpx;
  position: absolute;
  bottom: 15rpx;
}
.publicLectureDetail .cont .section {
  font-size: 24rpx;
  font-weight: 400;
  color:rgba(51,51,51,1);
  line-height: 36rpx;
  padding-bottom: 140rpx;
}
/* 底部费用和报名按钮 */
.publicLectureDetail .footer {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(111,111,111,1);
  position: fixed;
  bottom: 30rpx;
  /* left: 15rpx; */
  padding: 0 40rpx;
  box-sizing: border-box;
}
.publicLectureDetail .footer .btn {
  width: 100%;
  height: 83rpx;
  line-height: 83rpx;
  text-align: center;
  /* margin-left: 280rpx; */
  background:rgba(247,141,27,1);
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(255,255,255,1);
  border-radius: 40rpx;
}
.publicLectureDetail .footer .btn.end{
  background: #dbdbdb;
}