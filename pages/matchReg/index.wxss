/* pages/publicLecture/publicLecture.wxss */
.publicLecture {
  /* background: #F7F4F8; */
}
.publicLecture .item {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 35rpx;
  background: #fff;
  padding: 0 15rpx;
}
.pt40 {
  padding-top: 40rpx;
}
.publicLecture .item .left{
  width: 240rpx;
  height: 142rpx;
  margin-right: 16rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.publicLecture .item .right{
  width: 460rpx;
  font-size: 20rpx;
  font-weight: 400;
  color:rgba(153,153,153,1);
}
.publicLecture .item .right .title {
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
}
.publicLecture .item .right .date {
  font-size: 24rpx;
  color: #999;
}
.publicLecture .item .right .desc {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  color: #999;
}
.publicLecture .item .right .desc .btn {
  width: 101rpx;
  height: 39rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid rgba(253,134,29,1);
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(253,134,29,1);
  border-radius: 20rpx;
}
.publicLecture .item .right .desc .btn.active {
  border: 1rpx solid rgba(219,219,219,1);
  color: #666;
}
.publicLecture .item .right .desc .address{
  font-size: 24rpx;
}