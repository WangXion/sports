/* pages/publicLecture/publicLecture.wxss */
.publicLecture {
  background: #F7F4F8;
  min-height: 100vh;
}
.publicLecture .item {
  display: flex;
  justify-content: space-between;
  /* border-bottom: 2rpx solid #e5e5e5; */
  background: #fff;
  padding: 15rpx;
  margin-bottom: 20rpx;
}
.pt40 {
  padding-top: 40rpx;
}
.publicLecture .item .left{
  width: 240rpx;
  height: 150rpx;
  margin-right: 16rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.publicLecture .item .right{
  width: 460rpx;
  font-size: 20rpx;
  font-weight: 400;
  color:rgba(153,153,153,1);
}
.publicLecture .item .right .title {
  font-size: 30rpx;
  font-weight: 400;
  color:#1C1C1C;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.publicLecture .item .right .date {
  font-size: 24rpx;
  color: #9A9A9A;
}
.publicLecture .item .right .desc {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  color: #9A9A9A;
}
.publicLecture .item .right .desc .btn {
  width: 101rpx;
  height: 39rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid #FB8036;
  font-size: 20rpx;
  font-weight: 400;
  color: #FB8036;
  border-radius: 20rpx;
}
.publicLecture .item .right .desc .btn.active {
  border: 1rpx solid #878787;
  color: #7E7E7E;
}
.publicLecture .item .right .desc .address{
  font-size: 24rpx;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}