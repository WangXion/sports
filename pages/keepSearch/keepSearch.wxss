/* pages/keepSearch/keepSearch.wxss */
.keepSearch{
    padding: 0 15rpx;
}
.keepSearch .box{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 8rpx;
}
.keepSearch .box .search{
    display: flex;
    width: 602rpx;
    height: 66rpx;
    line-height: 66rpx;
    background:rgba(237,237,237,1);
    border-radius: 50rpx;
    align-items: center;
    position: relative;
    font-size: 24rpx;
}
.keepSearch .box .search .input {
    width: 100%;
    padding-left: 75rpx;
}
.keepSearch .box .search .img{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 20rpx;
    left: 25rpx;
}
.keepSearch .box .cancel{
    font-size: 30rpx;
    font-weight: 400;
    color:rgba(0,0,0,1);
    padding-right: 10rpx;
}
.keepSearch .hot{
    display: flex;
    align-items: center;
    padding: 34rpx 0 0 8rpx;
}
.keepSearch .hot .png{
    width: 35rpx;
    height: 35rpx;
}
.keepSearch .hot .hotspot{
    font-size: 30rpx;
    font-weight: 400;
    color:rgba(0,0,0,1);
    padding-left: 15rpx;
}
.keepSearch .content{
    font-size: 30rpx;
    font-weight: 400;
    color:rgba(102,102,102,1);
    padding: 35rpx 24rpx;
    border-bottom: 2rpx solid #E6E3E4;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}