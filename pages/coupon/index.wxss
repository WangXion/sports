/**index.wxss**/
.container{
    background: #F7F4F8;
}
/* tab切换 */
.tabBar{
    /* width: 100%; */
    height: 88rpx;
    display: flex;
    background: #fff;
}
.tabBar .item{
    flex: 1;
    line-height: 88rpx;
    font-weight: 400;
    color:rgba(102,102,102,1);
    font-size: 30rpx;
    text-align: center;
}
.tabBar .checked{
    color: #FF791F;
    position: relative;
}
.tabBar .checked:before{
    content: '';
    background: #FF791F;
    width: 66rpx;
    height: 6rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 10rpx;
    border-radius: 4px;
}
/* 优惠群啊列表 */
.couponList{
    min-height: calc(100vh - 88rpx);
    padding: 0 15rpx;
    padding-top: 28rpx;
    box-sizing: border-box;
}
.couponList .item{
    background: #fff;
    border-radius: 10rpx;
    height: 162rpx;
    margin-bottom: 26rpx;
}
.couponList .item .center{
    flex-direction: column;
    align-items: flex-start;
    padding-left: 74rpx;
}
.couponList .item .couponPirce{
    font-size: 60rpx;
    color: #FF791F;
    padding-left: 39rpx;
}
.couponList .item .couponPirce text{
    font-size: 36rpx;
    padding-right: 10rpx;
}
.couponList .item .couponName{
    font-size: 30rpx;
    color: #333333;
    margin-bottom: 7rpx;
}
.couponList .item .limit,.couponList .item .time{
    font-size: 24rpx;
    color: #333333;
    opacity: 0.5;
}
.couponList .item .limit{
    margin-bottom: 14rpx;
}
.couponList .item .btn{
    width: 127rpx;
    height: 53rpx;
    background:rgba(255,255,255,1);
    border: 1px solid rgba(255, 121, 31, 1);
    border-radius: 40rpx;
    line-height: 53rpx;
    text-align: center;
    font-size: 24rpx;
    color: #FF791F;
    margin-right: 18rpx;
}
.couponList .item .label{
    font-size: 24rpx;
    color: #BEBFBF;
    margin-right: 28rpx;
}
.flexStart{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.flexBetween{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
