    </view>
  </view>
  <!-- 按钮 -->
  <view class="button">
    <view>
      <checkbox-group class="row" bindchange="boxcheck">
        <checkbox name="box_check" checked="{{if_checked}}" value="{{ if_checked }}"></checkbox>
          <view>本人已阅读以上声明，并已同意全部条款</view>
      </checkbox-group>
    </view>
    <view>
      <button class="btn"
        disabled="{{ disabled }}"
        bindtap="sureAppointment"
        data-index="{{ currentKey }}">确认预约</button>
    </view>
  </view>
</view>
