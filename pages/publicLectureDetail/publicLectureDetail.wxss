/* pages/publicLectureDetail/publicLectureDetail.wxss */
.publicLectureDetail {

}
.publicLectureDetail .title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51,51,51,1);
  padding-bottom: 30rpx;
  padding-top: 20rpx;
  margin: 0 16rpx;
}
.publicLectureDetail .detail {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color:rgba(153,153,153,1);
  padding-bottom: 36rpx;
  box-sizing: border-box;
  margin: 0 16rpx;
}
.publicLectureDetail .detail .left {
  width: 240rpx;
  height: 142rpx;
  margin-right: 25rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.publicLectureDetail .detail .time {
  margin-bottom: 8rpx;
}
.publicLectureDetail .detail .address {
  margin-bottom: 8rpx;
}
/* 分割线 */
.publicLectureDetail .border {
  width:750rpx;
  height:11rpx;
  background:rgba(233,233,233,1);
}
/* 培训介绍 */
.publicLectureDetail .cont {
  padding: 30rpx 16rpx 0 16rpx;
}
.publicLectureDetail .cont .icon {
  width: 46rpx;
  height: 46rpx;
  margin-right: 16rpx;
}
.publicLectureDetail .cont .top {
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(0,0,0,1);
  display: flex;
  align-items: center;
  margin-bottom: 34rpx;
}
.publicLectureDetail .cont .section {
  font-size: 28rpx;
  font-weight: 400;
  color:rgba(51,51,51,1);
  line-height: 40rpx;
}
/* 底部费用和报名按钮 */
.publicLectureDetail .footer {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(111,111,111,1);
  width: 100%;
  height: 98rpx;
  background: #fff;
  z-index: 99;
  position: fixed;
  bottom: 30rpx;
  /* left: 15rpx; */
  padding: 0 40rpx;
  box-sizing: border-box;
}
.publicLectureDetail .footer .btn {
  width: 100%;
  height: 83rpx;
  line-height: 83rpx;
  text-align: center;
  /* margin-left: 280rpx; */
  background:rgba(247,141,27,1);
  font-size: 32rpx;
  font-weight: 400;
  color:rgba(255,255,255,1);
  border-radius: 40rpx;
}
.publicLectureDetail .footer .btn.end{
  background: #dbdbdb;
}