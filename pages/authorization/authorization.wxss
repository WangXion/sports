/* pages/authorization/authorization.wxss */
.authorization {
  margin-top: 350rpx;
  padding-left: 60rpx;
}
.authorization .title {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  color: rgba(0, 0, 0, 0.85);
}
.authorization .title .icon {
  width: 40rpx;
  height: 40rpx;
  background: #FF7C1D;
  margin-right: 20rpx;
  border-radius: 50%;
}
.authorization .text {
  font-size: 36rpx;
  margin-bottom: 90rpx;
}
.authorization .info {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.65);
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.authorization .info .icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
/* 注册 */
.authorization .register {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.55);
}
.authorization .register .icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.authorization .register .active {
  color: #FE7B1E;
}
.authorization .button {
  display: flex;
  color: #fff;
  margin-top: 60rpx;
  font-size: 36rpx;
}
.authorization .button .cancel {
  padding: 20rpx 100rpx;
  background: #C4C3C6;
  margin-right: 20rpx;
  border-radius: 50rpx;
}
.authorization .button .sure {
  line-height: 54rpx;
  text-align: center;
  padding: 20rpx 60rpx;
  background: #FE7B1E;
  border-radius: 50rpx;
  color: #fff !important;
  font-size: 36rpx;
}
/* 设置背景遮罩层样式 */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 10rpx;
  z-index: 9999;
}
/* 设置遮罩内容样式 */
.mask .maskContent {
  width: 80%;
  height: 813rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 26rpx;
  font-size: 20rpx;
  font-weight: 400;
  position: relative;
}
/* 设置遮罩层标题 */
.mask .maskContent .title {
  font-size: 30rpx;
  font-weight: 400;
  color:rgba(255,121,31,1);
  text-align: center;
  padding-bottom: 35rpx;
}
/* 设置关闭按钮图片的位置 */
.mask .closeImg {
  position: absolute;
  top: 27rpx;
  right: 27rpx;
}
/* 设置关闭按钮宽高 */
.mask .closeImg_image {
  width: 50rpx;
  height: 50rpx;
}