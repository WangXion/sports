<!--pages/venueDetail/venue.wxml-->
<view class="venueDetail">
  <!-- banner图片 -->
  <view class="banner">
    <image src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/banner.png" mode="cover"></image>
  </view>
  <!-- 游泳馆详情 -->
  <view class="detail">
    <view class="title">
      杭州市游泳馆
    </view>
    <view class="time">
      正常营业 9:00-22:00
      <view class="icon">
        <image src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/icon-phone.png" mode="cover"></image>
      </view>
      <view class="phone">0571-88886666</view>
    </view>
    <view class="address">
      <view class="icon">
        <image src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/icon-navigete.png" mode="cover"></image>
      </view>
      <view>地址：浙江省 杭州市 下城区 啥啥啥街道环城北路
        179号2楼
      </view>
    </view>
  </view>
  <!-- 场馆信息 -->
  <view class="info">
    <view class="title">
      <image class="icon" src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/icon-informate.png" mode="cover"></image>
      <view>场馆信息</view>
    </view>
    <view class="cont">
      <view class="item">
        <view class="tag ml74">免费停车</view>
        <view class="tag">免费wifi</view>
        <view class="tag">免费停车</view>
        <view class="tag">免费wifi</view>
      </view>
      <view class="right" catchtap="herfInfo">
        <image class="icon" src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/right-arrow.png" mode="cover"></image>
      </view>
    </view>
  </view>
  <!-- 分割线 -->
  <view class="border"></view>
  <!-- 单票 -->
  <view class="singleTicket">
    <view class="title">
      <view class="left">
        <view class="icon">
          <image class="icon" src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/ticket.png" mode="cover"></image>
        </view>
        <view>单票</view>
        <view class="price">9折</view>
      </view>
      <view class="right">
        <view class="icon">
          <image class="icon" src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/icon-yes.png" mode="cover"></image>
        </view>
        <view>可发票</view>
      </view>
    </view>
    <!-- tab栏 -->
    <view class="tab">
      <view class="cont">
        <block wx:for="{{ arr }}" wx:key="index">
          <view
            class="name {{ currentIndex === index ? 'active':''}}"
            bindtap="tapChange"
            data-index="{{ index }}">
            {{ item }}
          </view>
        </block>
      </view>
      <view class="line"></view>
    </view>
    <!-- 单票的列表 -->
    <view class="item">
      <view class="left">
        <view class="name">{{ currentIndex === 0 ? '游泳 早场 成人票' : currentIndex === 1 ? '羽毛球 早场 成人票' :currentIndex === 2 ? '保龄球 早场 成人票':'' }}</view>
        <view class="time">05:30-07:00</view>
        <view>随时退 | 过期退</view>
      </view>
      <view class="right">
        <view class="price">
          <view class="active">￥90</view> ￥100<view class="line"></view>
        </view>
        <view class="btn" bindtap="buy">购买</view>
      </view>
    </view>
    <!-- 更多 -->
    <view wx:if="{{ !showTicket }}" class="more" bindtap="ticketClick">
      查看其他5种票
      <image class="icon" src="https://sports-bureau.oss-cn-hangzhou.aliyuncs.com/images/right-arrow.png" mode="cover"></image>
    </view>
    <view wx:if="{{ showTicket }}">
      <block wx:for="{{ ticket }}" wx:key="index">
        <view class="item">
          <view class="left">
            <view class="name">票类型{{ index+1 }}</view>
            <view class="time">05:30-07:00</view>
            <view>随时退 | 过期退</view>
          </view>
          <view class="right">
            <view class="price">
              <view class="active">￥90</view> ￥100<view class="line"></view>
            </view>
            <view class="btn" bindtap="buy">购买</view>
          </view>
        </view>
      </block>
    </view>
  </view>
  <!-- 联系场馆 -->
  <view class="contactVenues">
    <!-- <image class="icon" src="" mode="cover" /> -->
    <!-- <view>联系场馆</view> -->
  </view>
</view>
