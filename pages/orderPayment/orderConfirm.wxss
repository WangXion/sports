/* pages/orderPayment/orderConfirm.wxss */
.orderConfirm{
  width: 100%;
  background: #F7F4F8;
  min-height: 100vh;
}
.orderConfirm .title{
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #000;
  padding-left: 17rpx;
}
.orderConfirm .list{
  background: #fff;
  padding: 0 20rpx;
}
.orderConfirm .list .item{
  padding: 0 4rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  height: 80rpx;
}
.orderConfirm .list .item:last-child{
  border-bottom: none;
}
.orderConfirm .list .item .label{
  font-size: 24rpx;
  color: #333;
  min-width: 50rpx;
}
.orderConfirm .list .item .value view{
  width: 50rpx;
  height: 50rpx;
  background: rgba(242,242,242,1);
  border-radius: 3rpx;
  color: #333;
  font-size: 28rpx;
}
.orderConfirm .list .item .value .num{
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
}
.orderConfirm .content{
  padding-bottom: 107rpx;
}
.orderConfirm .describe{
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
  padding: 21rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  height: 115rpx;
  background: #fff;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.footer .left {
  height: 100%;
}
.footer .left .cost{
  font-size: 22rpx;
  color: #000;
  padding-top: 10rpx;
}
.footer .left .price{
  font-size: 30rpx;
  color: #FE2323;
}
.footer .leftBottom {
  color: #666;
  font-size: 22rpx;
  padding-top: 20rpx;
}
.footer .leftBottom .icon{
  width: 28rpx;
  height: 28rpx;
  background: rgba(255,255,255,1);
  border: 1rpx solid rgba(193, 193, 193, 1);
  border-radius: 50%;
  margin-right: 15rpx;
}
.footer .leftBottom .icon.checked{
  background: rgba(255,133,44,1);
  border: 1rpx solid rgba(255,133,44,1);  
}
.footer .leftBottom text{
  color: #FF2F2F;
  font-size: 22rpx;
}
.footer .btn{
  width: 335rpx;
  height: 78rpx;
  background:rgba(255,133,44,1);
  color: #fff;
  font-size: 30rpx;
  border-radius: 50rpx;
}
.textOver{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}