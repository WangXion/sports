/**personalInfo.wxss**/
.container{
    background: #F7F4F8;
    box-sizing: border-box;
    padding-top: 16rpx;
    height: 100vh;
}
.userInfo{
    background: #fff;
    padding: 0 16rpx;
    box-sizing: border-box;
}
.header{
    width: 100%;
    height: 180rpx;
    padding-left: 20rpx;
    border-bottom: 1px solid #F0F0F0;
    box-sizing: border-box;
}
.header .label{
    font-size: 30rpx;
    color: #333;
}
.header .avatar{
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
}
.userInfo .item{
    width: 100%;
    height: 122rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #F0F0F0;
}
.userInfo .item:last-child{
    border-bottom: none;
}
.userInfo .item .label{
    font-size: 30rpx;
    color: #333;
}
.userInfo .item .text{
    text-align: right;
    font-size: 30rpx;
    color: #333;
    opacity: 0.6;
}
.userInfo .item input{
    text-align: right;
    font-size: 30rpx;
    color: #333;
    opacity: 0.6;
}
.userInfo .item .sex view{
    width: 111rpx;
    height: 65rpx;
    background: #B9B9B9;
    color:rgba(51,51,51,1);
    opacity:0.6;
    border-radius: 65rpx;
    line-height: 65rpx;
    text-align: center;
    margin-left: 19rpx;
}
.userInfo .item .sex .checked{
    background: #FF791F;
    color: #fff;
    opacity: 1;
}
.userInfo .item .arrow{
    width: 14rpx;
    height: 25rpx;
    margin: 0 24rpx;
}
.footer{
    width: 96%;
    height: 98rpx;
    box-sizing: border-box;
    margin: 0 auto;
    height: 98rpx;
    background: #FF791F;
    border-radius: 50rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 98rpx;
    margin-top: 100rpx;
}
.flexBetween{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.flexStart{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}